.navbar a {
    font-size: 20px;
    text-decoration: none;
    color: #545454;
}

.navbar a:hover {
    color: #d7d7d7;
    text-decoration: none;
}

.navbar-container {
    padding: 0 40px;
    border-bottom: 1px solid #dcdcdc;
}

.navbar {
    display: table;
    table-layout: fixed;
    height: 70px;
    overflow: hidden;
    width: 100%;
}

.logo-container {
    width: 103px;
}

.logo {
    width: 103px;
    height: 22px;
    background: url(../images/logo.png) no-repeat center center;
    // background: url(public/images/logo.png) no-repeat center center;
    text-indent: -9999px;
    overflow: hidden;
}

.nav-container {
    text-align: right;
}

.pitch {
    padding-right: 78px;
    padding-left: 62px;
}

.login {
    position: relative;
}

.login:after  {
    position: absolute;
    content: "";
    width: 100%;
    height: 2px;
    left: 0;
    bottom: -3px;
    background: #ff8d00;
}

.search-mock {
    width: 221px;
    height: 34px;
    background: url(../images/search.png) no-repeat center center;
}

